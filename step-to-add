npm install gh-pages --save-dev --legacy-peer-deps


package.json
"scripts": {
  "dev": "vite",
  "build": "vite build",
  "lint": "eslint .",
  "preview": "vite preview",
  "predeploy": "npm run build",
  "deploy": "gh-pages -d dist"
}


npm run build
npm run deploy


